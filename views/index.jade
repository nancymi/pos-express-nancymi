extends layout

append head
  script('/javascripts/show-items.js')

block content
  .container
    .row
      .col-md-3.col-md-offset-6&attributes({'aligin': 'center'})
        a#history-button.button.button-glow.button-border.button-rounded.button-primary 历史记录
      .col-md-3&attributes({'align': 'center'})
        a#cart-button.button.button-glow.button-border.button-rounded.button-primary 购物车 #{cart-sum} 件
    table(id='items', class='table table-hover text-center')
      tr
        - itemTitleList = ['名称', '单价', '促销活动', '添加']
        each itemTitle in itemTitleList
          td= itemTitle

      mixin itemHtml(barcode, name, price, unit, promotion)
        tr.item
          td #{name}
          td #{price} 元/#{unit}
          td #{promotion}
          td <a class="add-button button button-glow button-border button-rounded button-circle button-primary" data-barcode="#{barcode}"><i class="fa fa-hand-lizard-o"></i></a>

      each index in indexList
        +itemHtml(index.barcode, index.name, index.price, index.unit, index.promotion)

